{
    "manifest_version": 2,
    "name": "Code With Mosh Playlist Downloader",
    "version": "0.0.1",

    "web_accessible_resources": [

    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],

        "js": [
            "./core/foreground.js"
        ],
        "css": []
    }],


    "background": {
        "scripts": [
            "./core/background.js"
        ]
    },

    "browser_action": {
        "default_icon": "./utils/icons/icon.png"
    },

    "permissions": [
        "webNavigation",
        "*://*/*",
        "https://*/*"
    ]
}